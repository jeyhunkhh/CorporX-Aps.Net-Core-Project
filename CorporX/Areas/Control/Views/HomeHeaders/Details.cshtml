@model CorporX.Models.Home.HomeHeader

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Control/Views/Shared/_AdminLayout.cshtml";
}


<section>
    <container>
        <row>
            <div class="px-4">
                <div>
                    <h1 class="text-warning">Details</h1>

                    <h4>Home Intro</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Heading)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Heading)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Photo)
                        </dt>
                        <dd class="col-sm-10">
                            <img src="~/uploads/@Model.Photo" width="400" alt="Alternate Text" />
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Title)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Title)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Content)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Content)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </row>
    </container>
</section>




