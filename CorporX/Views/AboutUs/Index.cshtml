@model AboutUsViewModel
<!--body content wrap start-->
<div class="main">

    <partial name="_Breadcrumb" model="Model.BreadcrumbViewModel"/>
    <!--promo section start-->
    <section class="promo-section pt-100">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.AboutUsPromo)
                {
                    <div class="col-md-4 col-lg-4">
                        <div class="single-promo-block p-3 rounded d-flex justify-content-between">
                            <div class="promo-block-icon mr-4">
                                <span class="@item.Icon icon-md color-primary"></span>
                            </div>
                            <div class="promo-block-content">
                                <h5>@item.Title</h5>
                                <p>@item.Content</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!--promo section end-->
    <!--about us section start-->
    <section class="about-us-section ptb-100">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-md-12 col-lg-5">
                    <div class="video-promo-content mb-md-4 mb-lg-0">
                        <h2>@Model.AboutUsMission.Title</h2>
                        <p>
                            @Model.AboutUsMission.Content
                        </p>
                        <ul class="list-unstyled tech-feature-list">
                            @foreach (var item in Model.AboutUsMission.List.Split(","))
                            {
                                <li class="py-1">
                                    <span class="ti-control-forward mr-2 color-secondary"></span>
                                    <strong>@item.Split(" ")[0]</strong>
                                    @foreach (var text in @item.Split(" ").Skip(1))
                                    {
                                        @(text + " ")
                                    }
                                </li>
                            }
                        </ul>
                        <div class="row mt-4">
                            <div class="col-4">
                                <div class="counter-single">
                                    <h4 class="mb-0 color-secondary">4566</h4>
                                    <strong>Total Project</strong>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="counter-single">
                                    <h4 class="mb-0 color-secondary">25002</h4>
                                    <strong>Total Customer</strong>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="counter-single">
                                    <h4 class="mb-0 color-secondary">4566</h4>
                                    <strong>Total Project</strong>
                                </div>
                            </div>
                        </div>
                        <div class="action-btns mt-4">
                            <a href="#" class="btn primary-solid-btn mr-2">View Our Services</a>
                            <a href="#" class="btn outline-btn">Contact Us</a>
                        </div>
                    </div>

                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="card border-0 shadow-sm text-white">
                        <img src="img/about-1.jpg" alt="video" class="img-fluid rounded shadow-sm">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--about us section end-->
    <!--our work process section start-->
    <section class="work-process-new ptb-100 gray-light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="section-heading text-center mb-5">
                        <h2>@Model.AboutUsWorkProcess.Title</h2>
                        <p class="lead">
                            @Model.AboutUsWorkProcess.Content
                        </p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="work-process-wrap text-center">

                        @foreach (var item in Model.AboutUsWorkProcessItems)
                        {
                            <div class="single-work-process">
                                <div class="work-process-icon-wrap secondary-bg rounded-circle">
                                    <i class="@item.Icon icon-md text-white"></i>
                                </div>
                                <div class="work-process-content mt-4">
                                    <h5>@item.Title</h5>
                                    <p>@item.Content </p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--our work process section end-->
    <!--team two section start-->
    <section class="team-two-section ptb-100 gray-light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-8">
                    <div class="section-heading text-center mb-5">
                        <h2>@Model.AboutUsTeam.Title</h2>
                        <p class="lead">
                            @Model.AboutUsTeam.Content
                        </p>
                    </div>
                </div>
            </div>
            <partial name="_TeamTwo" model="Model.TeamItems" />
        </div>
    </section>
    <!--team two section end-->
    <!--testimonial section start-->
    <section class="testimonial-section ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="section-heading mb-5 text-center">
                        <h2>@Model.AboutUsSliderHeader.Title</h2>
                        <p class="lead">
                            @Model.AboutUsSliderHeader.Content
                        </p>
                    </div>
                </div>
            </div>
            <partial name="_Slider" model="Model.SliderItems" />
        </div>
    </section>
    <!--testimonial section end-->
    
    <partial name="_Client" model="Model.Clients"/>

</div>
<!--body content wrap end-->
