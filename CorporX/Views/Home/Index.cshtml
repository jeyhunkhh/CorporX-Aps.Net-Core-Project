@model HomeViewModel 


<!--body content wrap start-->
<div class="main">

    <!--hero section start-->
    <section class="hero-equal-height pt-165 pb-100 gradient-overly-right-light" style="background: url('@Model.HomeHeader.Photo')no-repeat center center / cover">
        <div class="container">
            <div class="row">
                <div class="col-md-7 col-lg-6">
                    <div class="hero-slider-content">
                        <span class="text-uppercase">@Model.HomeHeader.Heading</span>
                        <h1>@Model.HomeHeader.Title</h1>
                        <p class="lead">@Model.HomeHeader.Content </p>
                        <div class="action-btns mt-3">
                            <a href="#" class="btn secondary-solid-btn">Get Start Now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--hero section end-->
    <!--promo section start-->
    <section class="promo-block ptb-100 mt--165 z-index position-relative">
        <div class="container">
            <div class="row">
                @foreach (var item in Model.HomePromo)
                {
                    <div class="col-md-4 col-lg-4">
                        <div class="single-promo-block promo-hover-bg-1 hover-image shadow-lg p-5 custom-radius white-bg">
                            <div class="promo-block-icon mb-3">
                                <span class="@item.Icon icon-md color-primary"></span>
                            </div>
                            <div class="promo-block-content">
                                <h5>@item.Title</h5>
                                <p>@item.Content</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!--promo section end-->
    <!--about us section start-->
    <section class="about-us-section pb-100">
        <div class="container">
            <div class="row justify-content-between align-items-center">
                <div class="col-md-12 col-lg-6">
                    <div class="video-promo-content mb-md-4 mb-lg-0">
                        <h2>@Model.HomeAboutUs.Title</h2>
                        <p class="lead">
                            @Model.HomeAboutUs.Content
                        </p>
                        <ul class="list-unstyled tech-feature-list">

                            @foreach (var item in Model.HomeAboutUs.Text.Split(","))
                            {
                                <li class="py-1">
                                    <span class="ti-control-forward mr-2 color-secondary"></span>
                                    <strong>@item.Split(" ")[0]</strong>
                                    @foreach (var text in @item.Split(" ").Skip(1))
                                    {
                                        @(text + " ")
                                    }
                                </li>
                            }
                        </ul>
                        <div class="action-btns mt-4">
                            <a href="#" class="btn primary-solid-btn mr-2">View Our Services</a>
                            <a href="#" class="btn outline-btn">Contact Us</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="image-wrap">
                        <img src="https://res.cloudinary.com/djsws5hil/image/upload/v1602055675/CorporX/about-img_balshm.jpg" alt="video" class="img-fluid rounded">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--about us section end-->
    <!--services section start-->
    <section class="services-section ptb-100 gray-light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="section-heading text-center mb-5">
                        <h2>@Model.HomeServices.Title</h2>
                        <p class="lead">
                            @Model.HomeServices.Content
                        </p>
                    </div>
                </div>
            </div>
            <partial name="_Services" model="Model.ServicesDetails" />
        </div>
    </section>
    <!--services section end-->
    <!--promo section start-->
    <section class="promo-section gradient-bg ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="app-business-content text-center text-white">
                        <h2 class="text-white">Download Apps Managing Business</h2>
                        <p class="lead">
                            Building your Apps busines helps attract more potential clients.
                            Our integrated marketing team will work directly long-term high-impact convergence.
                        </p>

                        <div class="action-btns mt-5">
                            <ul class="list-inline app-download-list">
                                <li class="list-inline-item">
                                    <a href="#" class="d-flex align-items-center border rounded">
                                        <span class="fab fa-windows icon-sm mr-3"></span>
                                        <div class="download-text text-left">
                                            <span>Download form</span>
                                            <h5 class="mb-0">Windows</h5>
                                        </div>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="d-flex align-items-center border rounded">
                                        <span class="fab fa-apple icon-sm mr-3"></span>
                                        <div class="download-text text-left">
                                            <span>Download form</span>
                                            <h5 class="mb-0">App Store</h5>
                                        </div>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="d-flex align-items-center border rounded">
                                        <span class="fab fa-google-play icon-sm mr-3"></span>
                                        <div class="download-text text-left">
                                            <span>Download form</span>
                                            <h5 class="mb-0">Google Play</h5>
                                        </div>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--promo section end-->
    <!--our work or portfolio section start-->
    <section class="our-portfolio-section ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-heading text-center mb-5">
                        <h2>@Model.HomePortfolio.Title</h2>
                        <p class="lead">
                            @Model.HomePortfolio.Content
                        </p>
                    </div>
                </div>
            </div>
            <partial name="_Portfolio" model="Model.ProjectDetails" />
        </div>
    </section>
    <!--our work or portfolio section end-->
    <!--blog section start-->
    <section class="our-blog-section ptb-100 gray-light-bg">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="section-heading mb-5">
                        <h2>@Model.HomeBlog.Title</h2>
                        <p class="lead">
                            @Model.HomeBlog.Content
                        </p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                @foreach (var item in Model.HomeBlogItem)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="single-blog-card card border-0 shadow-sm">
                            <div class="blog-img">
                                <a href="#"><span class="category position-absolute">@item.Label</span></a>
                                <a href="#"><img src="@item.Photo" class="card-img-top position-relative img-fluid" alt="blog"></a>
                            </div>
                            <div class="card-body">
                                <h3 class="h5 mb-2 card-title"><a href="#">@item.Title</a></h3>
                                <p class="card-text">@item.Content</p>
                            </div>
                            <div class="card-footer border-0 d-flex align-items-center justify-content-between">
                                <div class="author-meta d-flex align-items-center">
                                    <span class="fa fa-user mr-2 p-3 bg-white rounded-circle border"></span>
                                    <div class="author-content">
                                        <a href="#" class="d-block">@item.Heading</a>
                                        <small>@item.AddDateTime.ToString("MMM dd yyyy")</small>
                                    </div>
                                </div>
                                <div class="author-like">
                                    <a href="#"><span class="fa fa-share-alt"></span> 50</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!--blog section end-->
    <!--testimonial section start-->
    <section class="testimonial-section ptb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-9 col-lg-8">
                    <div class="section-heading mb-5 text-center">
                        <h2>@Model.HomeTestimonial.Title</h2>
                        <p class="lead">
                            @Model.HomeTestimonial.
                        </p>
                    </div>
                </div>
            </div>

            <div class="row">
                @foreach (var item in Model.HomeTestimonialItem)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="testimonial-single shadow-sm gray-light-bg rounded p-4">
                            <blockquote>
                                @item.Content
                            </blockquote>
                            <div class="client-img d-flex align-items-center justify-content-between pt-4">
                                <div class="d-flex align-items-center">
                                    <img src="@item.Photo" alt="client" width="50" class="img-fluid rounded-circle shadow-sm mr-3" />
                                    <div class="client-info">
                                        <h5 class="mb-0">@item.FullName</h5>
                                        <small class="mb-0">@item.Position</small>
                                    </div>
                                </div>
                                <div class="client-ratting">
                                    <ul class="list-inline client-ratting-list">

                                        @for (int i = 0; i < item.Star; i++)
                                        {
                                            <li class="list-inline-item"><span class="fas fa-star ratting-color"></span></li>
                                        }
                                        @for (int i = 0; i < (5 - item.Star); i++)
                                        {
                                            <li class="list-inline-item"><span class="fas fa-star"></span></li>
                                        }

                                    </ul>
                                    <span class="font-weight-bold">5.0 <small class="font-weight-lighter">Out of 5</small></span>
                                </div>
                            </div>
                        </div>

                    </div>
                }


            </div>

        </div>
    </section>
    <!--testimonial section end-->
    <!--team two section start-->
    <section class="team-two-section ptb-100 gray-light-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-8">
                    <div class="section-heading text-center mb-5">
                        <h2>@Model.HomeTeam.Title</h2>
                        <p class="lead">
                            @Model.HomeTeam.Content
                        </p>
                    </div>
                </div>
            </div>
            <partial name="_TeamTwo" model="Model.TeamItems"/>
        </div>
    </section>
    <!--team two section end-->


    
    <partial name="_CallToAction" />

</div>
<!--body content wrap end-->